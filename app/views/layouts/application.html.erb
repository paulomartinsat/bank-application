<!DOCTYPE html>
<html>
  <head>
    
    <title>Bank Mine</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class = "container-fluid">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link" href="/home/index">Homepage</a>
        </li>
         <li class="nav-item">
          <%= button_to 'Logout', destroy_user_session_path, class:"nav-link", method: :delete %>
        </li>
        <li class="nav-item">
          <%= link_to 'My Wallet', wallet_index_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'User List', user_list_path, class:"nav-link" %>
        </li>
      </ul>
      <%= render "stocks/form", url: research_stock_path, model: Stock.new, method: :post %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
